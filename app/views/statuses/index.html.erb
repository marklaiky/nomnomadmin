<div class="page-header">
  <h1><strong>All of the Statuses</strong></h1>
</div>

<%= link_to "Post a New Status", new_status_path, class: "btn btn-primary" %>

<% @statuses.each do |status| %>
  <div class="status">
    <p><%= status.user.first_name %></p>
    <p><%= status.content %></p>
    <div class="meta">
        <%= link_to time_ago_in_words(status.created_at), status %>
        <span class="admin">
          | <%= link_to "Edit", edit_status_path(status) %> |
          <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete?"} %>
        </span>
    </div>
  </div>
<% end %>
